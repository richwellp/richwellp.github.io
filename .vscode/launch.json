{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Debug Full Stack (Flask + Vue)",
      "configurations": ["Python: backend-api", "Vue: frontend-ui"]
    }
  ],
  "configurations": [
    {
      "name": "Python: backend-api",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceFolder}/backend",
      "module": "flask",
      "env": {
        "FLASK_APP": "api/index:app",
        "FLASK_RUN_PORT": "5000",
        "FLASK_DEBUG": "1"
      },
      "args": ["run", "--no-reload", "--host", "127.0.0.1"],
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Vue: frontend-ui",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "cwd": "${workspaceFolder}/frontend"
    }
  ]
}
